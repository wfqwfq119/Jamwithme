<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_jams_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cse110.jamwithme.add_jams_activity">



    <TextView
        android:text="Add Jams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/curr_jam"
        android:layout_alignEnd="@+id/curr_jam" />

    <Button
        android:text="Select Jam"
        android:layout_width="200dp"
        android:id="@+id/select_amj"
        android:background="?attr/actionModeSplitBackground"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/title_amj"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Add an audio file so others can hear you jamming out! "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_amj"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textStyle="normal|italic"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bNext2"
        android:background="?android:attr/statusBarColor"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/delet_amj"
        android:layout_toEndOf="@+id/delet_amj"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <TextView
        android:text="Nothing to play..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/curr_jam"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/select_amj"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Reselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delet_amj"
        android:background="?attr/actionModeSplitBackground"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignBaseline="@+id/bUpload"
        android:layout_alignBottom="@+id/bUpload"
        android:layout_alignRight="@+id/ib_stop_amj"
        android:layout_alignEnd="@+id/ib_stop_amj" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/green_stop"
        android:id="@+id/ib_stop_amj"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_below="@+id/curr_jam"
        android:layout_toRightOf="@+id/ib_play_amj"
        android:layout_toEndOf="@+id/ib_play_amj" />

    <Button
        android:text="Upload"
        android:background="?android:attr/statusBarColor"
        android:textColor="@android:color/white"
        android:id="@+id/bUpload"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/bNext2"
        android:layout_alignLeft="@+id/select_amj"
        android:layout_alignStart="@+id/select_amj" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/play_green_cropped"
        android:id="@+id/ib_play_amj"
        android:layout_alignBottom="@+id/ib_stop_amj"
        android:layout_alignRight="@+id/bUpload"
        android:layout_alignEnd="@+id/bUpload" />


</RelativeLayout>
