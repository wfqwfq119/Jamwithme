<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_jams_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cse110.jamwithme.add_jams_activity">


    <TextView
        android:text="Add an audio file so others can hear you jamming out! "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_amj"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textStyle="normal|italic"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <Button
        android:text="Select Jam"
        android:layout_width="200dp"
        android:id="@+id/bselect"
        android:background="?attr/actionModeSplitBackground"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@+id/title_amj"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="Nothing to play..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/curr_jam"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_below="@+id/bselect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/play_green_cropped"
        android:id="@+id/ib_play_amj"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_below="@+id/curr_jam"
        android:layout_alignLeft="@+id/title_amj"
        android:layout_alignStart="@+id/title_amj"
        android:layout_marginTop="16dp" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/green_stop"
        android:id="@+id/ib_stop_amj"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp"
        android:layout_alignBottom="@+id/ib_play_amj"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Delete Jam"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="?attr/actionModeSplitBackground"
        android:textColor="@android:color/white"
        android:id="@+id/bdelete"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_above="@+id/bNext2"
        android:layout_alignLeft="@+id/bselect"
        android:layout_alignStart="@+id/bselect"
        android:layout_marginBottom="27dp" />

    <TextView
        android:text="Add Jam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bNext2"
        android:background="?android:attr/statusBarColor"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/bdelete"
        android:layout_toEndOf="@+id/bdelete" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bNext2"
        android:background="?android:attr/statusBarColor"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
